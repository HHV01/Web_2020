@model IEnumerable<MyPhamOnline.Models.SANPHAM>
<div class="container">
    <h2 class="text-center">Sản Phẩm bán nhiều</h2>
    <hr>
    <div class="container">
        <div class="row">
            <div class="row">
                @foreach (var sanpham in Model)
                {
            <div class=" col-sm-3 col-md-3 col-lg-3 col-xs-6">

                <div class="thumbnail" style="border-width:unset;border-color:blue;">
                    <div class="thumbnail">
                        <img src="~/Images/@sanpham.AnhBia" alt="Thumbnail Image 1" class="img-responsive img-rounded imgbook" style="width:400px;" />
                        <div class" caption">
                            <h4 style="min-height : 50px;">
                                <h4 class="media-heading"><a href="@Url.Action("ChiTietSanPham", "MyPhamOnline", new {id = sanpham.MaSP})">@sanpham.TenSP</a></h4>
                            </h4>
                            <p>
                                <a href="@Url.Action("ThemGioHang","GioHang",new { ms = sanpham.MaSP, url = Request.Url.ToString() })" class="btn btn-primary" role="button">
                                    <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>Add to Cart
                                </a>
                        </div>
                    </div>
                </div>
            </div>}
            </div>
        </div>

